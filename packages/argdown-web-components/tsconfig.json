{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "lib": ["es2022", "es2019", "es2017", "dom"],
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true,
    "allowJs": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strictFunctionTypes": true
  },
  "exclude": ["types", "node_modules", "dist", "dist-esm", "test"]
}
