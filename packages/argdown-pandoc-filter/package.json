{
  "name": "@argdown/pandoc-filter",
  "engines": {
    "node": ">= 22.14.0"
  },
  "version": "1.7.7",
  "description": "Turns Argdown code fences into svg, png, jpg, webp or web-component argument maps",
  "bin": {
    "argdown-filter": "dist/index.js"
  },
  "main": "dist/index.js",
  "scripts": {
    "deploy": "npm run test && npm run build && npm version patch && npm run push",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha -r ts-node/register --full-trace --bail --require source-map-support/register ./test/**/*.spec.ts",
    "overwrite-snapshots": "cross-env CHAI_SNAPSHOT_UPDATE=true npm run test",
    "coverage": "nyc mocha -r ts-node/register --full-trace --bail --require source-map-support/register ./test/**/*.spec.ts",
    "report": "nyc report",
    "clean": "rimraf \"dist/*\" && rimraf \"dist-esm/*\"",
    "prepublishOnly": "npm run-script build",
    "push": "git push --tags origin HEAD:master"
  },
  "keywords": [
    "pandoc-filter",
    "pandoc",
    "markdown",
    "argdown",
    "argument maps",
    "argumentation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/argdown/argdown/tree/master/packages/argdown-pandoc-filter"
  },
  "author": {
    "name": "Christian Voigt",
    "email": "1pxsolidblack@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@argdown/image-export": "workspace:^",
    "@types/chai": "^5.2.2",
    "@types/chai-fs": "^2.0.5",
    "@types/lodash.defaultsdeep": "^4.6.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.24",
    "chai": "^4.3.10",
    "chai-fs": "^2.0.0",
    "cross-env": "^7.0.3",
    "mocha": "^11.5.0",
    "mocha-chai-snapshot": "^1.0.0",
    "nyc": "^17.1.0",
    "rimraf": "^6.0.1",
    "source-map-support": "0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "@argdown/core": "workspace:^",
    "@argdown/node": "workspace:^",
    "import-global": "^1.1.1",
    "lodash.defaultsdeep": "^4.6.1",
    "pandoc-filter": "^2.2.0"
  },
  "peerDependencies": {
    "pandoc": ">=3.6.0",
    "rsvg-convert": ">=2.60.0"
  },
  "peerDependenciesMeta": {
    "pandoc": {
      "optional": false
    },
    "rsvg-convert": {
      "optional": true
    }
  }
}
