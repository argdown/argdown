{
  "name": "@argdown/cli",
  "description": "A command line interface for exporting Argdown files to html, dot or json.",
  "keywords": [
    "argumentation",
    "argument mapping",
    "Argdown",
    "Markdown"
  ],
  "engines": {
    "node": ">= 22.11.0"
  },
  "version": "1.7.5",
  "license": "MIT",
  "main": "dist/cli.js",
  "dependencies": {
    "@argdown/core": "workspace:^",
    "@argdown/markdown-it-plugin": "workspace:^",
    "@argdown/node": "workspace:^",
    "@types/markdown-it": "^14.1.2",
    "@types/yargs": "^17.0.33",
    "import-global": "^1.1.1",
    "markdown-it": "^14.1.0",
    "pkginfo": "^0.4.1",
    "yargs": "^17.7.2"
  },
  "bin": {
    "argdown": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/argdown/argdown/tree/master/packages/argdown-cli"
  },
  "author": {
    "name": "Christian Voigt",
    "email": "1pxsolidblack@gmail.com"
  },
  "scripts": {
    "deploy": "npm run version:patch && git push --tags origin HEAD:master",
    "build": "npm run clean && npm run build:src",
    "build:src": "tsc",
    "test": "NODE_OPTIONS=--no-deprecation mocha -r ts-node/register --full-trace --require source-map-support/register ./test/**/*.spec.ts",
    "test:build": "NODE_OPTIONS=--no-deprecation npm run build && NODE_OPTIONS=--no-deprecation mocha -r ts-node/register --full-trace --require source-map-support/register ./test/**/*.spec.ts",
    "test:custom-process": "mocha -r ts-node/register --full-trace --require source-map-support/register ./test/**/*.spec.ts --fgrep \"custom process\"",
    "coverage": "nyc mocha -r ts-node/register --full-trace --bail --require source-map-support/register ./test/**/*.spec.ts",
    "report": "nyc report",
    "prepublishOnly": "npm run-script build",
    "clean": "rimraf \"dist/*\" --glob",
    "version:patch": "npm version patch"
  },
  "readmeFilename": "Readme.md",
  "preferGlobal": true,
  "devDependencies": {
    "@argdown/image-export": "workspace:^",
    "@types/chai": "^5.2.2",
    "@types/chai-fs": "^2.0.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.24",
    "chai": "^5.2.0",
    "chai-fs": "^2.0.0",
    "copyfiles": "^2.2.0",
    "glob": "^11.0.1",
    "intercept-stdout": "^0.1.2",
    "mkdirp": "^3.0.1",
    "mocha": "^11.1.0",
    "nyc": "^17.1.0",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typedoc": "0.28.3",
    "typescript": "5.8.3"
  },
  "resolutions": {
    "@types/markdown-it": "^14.1.2"
  },
  "nyc": {
    "include": [
      "dist/**/*.js",
      "dist/**/*.jsx"
    ],
    "extension": [
      ".js",
      ".jsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
