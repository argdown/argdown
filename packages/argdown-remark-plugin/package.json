{
  "name": "@argdown/remark-plugin",
  "version": "1.7.7",
  "description": "Turns Argdown code fences into svg argument maps",
  "main": "dist/argdown-remark-plugin.js",
  "type": "module",
  "scripts": {
    "deploy": "npm run test && npm run build && npm version patch && npm run push",
    "sandbox": "parcel ./test/sandbox.html",
    "type-check": "tsc --noEmit",
    "build": "npm run clean && npm run build:src && npm run build:esm",
    "build:esm": "tsc -m es6 --target ES2022 --outDir dist-esm",
    "build:src": "tsc",
    "docs:build": "node ./node_modules/typedoc/bin/typedoc",
    "test": "mocha",
    "coverage": "nyc mocha -r ts-node/register --full-trace --bail --require source-map-support/register ./test/**/*.spec.ts",
    "report": "nyc report",
    "clean": "rimraf \"dist/*\" --glob && rimraf \"dist-esm/*\" --glob",
    "prepublishOnly": "npm run-script build",
    "push": "git push --tags origin HEAD:master"
  },
  "keywords": [
    "remark-plugin",
    "remark",
    "argdown",
    "argument maps",
    "argumentation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/argdown/argdown/tree/master/packages/argdown-remark-plugin"
  },
  "author": {
    "name": "Christian Voigt",
    "email": "1pxsolidblack@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@argdown/web-components": "workspace:^",
    "@parcel/transformer-typescript-tsc": "^2.14.4",
    "@types/chai": "^5.2.2",
    "@types/lodash.defaultsdeep": "^4.6.9",
    "@types/mdast": "^4.0.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.24",
    "@types/unist": "^3.0.3",
    "chai": "^5.2.0",
    "mocha": "^11.5.0",
    "nyc": "^17.1.0",
    "parcel": "^2.14.4",
    "postcss": "^8.2.1",
    "remark": "15.0.1",
    "remark-html": "16.0.1",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.16",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "@argdown/core": "workspace:^",
    "lodash.defaultsdeep": "^4.6.1",
    "unist-builder": "4.0.0",
    "unist-util-is": "6.0.0",
    "unist-util-visit": "5.0.0"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ]
}
