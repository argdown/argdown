{
  "name": "@argdown/monorepo",
  "author": "Christian Voigt <1pxsolidblack@googlemail.com>",
  "repository": "https://github.com/christianvoigt/argdown",
  "private": true,
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/argdown-core",
      "packages/argdown-node",
      "packages/argdown-markdown-it-plugin",
      "packages/argdown-cli",
      "packages/argdown-codemirror-mode",
      "packages/argdown-gatsby-remark-plugin",
      "packages/argdown-highlightjs",
      "packages/argdown-image-export",
      "packages/argdown-language-server",
      "packages/argdown-map-views",
      "packages/argdown-marked-plugin",
      "packages/argdown-prism",
      "packages/argdown-remark-plugin",
      "packages/argdown-web-components",
      "packages/argdown-sandbox",
      "packages/argdown-docs",
      "packages/ArgVu"
    ],
    "nohoist": [
      "**/glob",
      "**/minimatch",
      "**/chai",
      "**/@types/chai",
      "**/mocha",
      "**/ts-node",
      "**/globby",
      "**/vue/**",
      "**/@vue/**",
      "**/webpack/**"
    ]
  },
  "scripts": {
    "test": "TS_NODE_COMPILER_OPTIONS='{\"traceResolution\":false}' yarn workspaces run test",
    "test:full_log": "TS_NODE_COMPILER_OPTIONS='{\"traceResolution\":true}' yarn workspaces run test",
    "test:coverage": "yarn workspaces test:coverage",
    "build": "yarn workspaces run build",
    "install-package": "yarn workspace @argdown/node add @types/pdfkit",
    "yarn:upgrade": "yarn workspaces foreach --all upgrade"
  },
  "readmeFilename": "Readme.md",
  "preferGlobal": true,
  "devDependencies": {
    "@vuepress/plugin-pwa": "1.9.10",
    "esm": "^3.2.25",
    "typescript": "^5.x.x",
    "vuepress": "1.9.10",
    "webpack": "^4.8.1",
    "vue": "^2.6.10",
    "@vue/component-compiler-utils": "^3.0.0"
  },
  "workspace-sources": {
    "*": [
      "packages/*/src"
    ]
  },
  "dependencies": {
    "markdown-it-container": "4.0.0",
    "vuepress-plugin-sitemap": "2.3.1"
  }
}
