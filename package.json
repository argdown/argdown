{
  "name": "@argdown/monorepo",
  "author": "Christian Voigt <1pxsolidblack@googlemail.com>",
  "repository": "https://github.com/argdown/argdown",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:clean": "rm -rf node_modules && rm -rf packages/*/node_modules",
    "build": "yarn workspaces foreach -A --topological-dev --exclude . run build",
    "install-package": "yarn workspace @argdown/node add @types/pdfkit",
    "yarn:upgrade": "yarn workspaces foreach --all upgrade",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"traceResolution\":false}' yarn workspaces foreach -A --exclude . run test",
    "test:full_log": "TS_NODE_COMPILER_OPTIONS='{\"traceResolution\":true}' yarn workspaces foreach -A --exclude . run test",
    "test:coverage": "nyc yarn workspaces foreach -A --exclude . run test",
    "docs:dev": "yarn workspace @argdown/docs run docs:dev"
  },
  "nyc": {
    "all": true,
    "include": [
      "packages/**/src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "readmeFilename": "Readme.md",
  "preferGlobal": true,
  "devDependencies": {
    "@vue/component-compiler-utils": "^3.0.0",
    "@vuepress/plugin-pwa": "1.9.10",
    "esm": "^3.2.25",
    "nyc": "^17.1.0",
    "stream-browserify": "^3.0.0",
    "typescript": "5.8.3",
    "vm-browserify": "^1.1.2",
    "vue": "^2.6.10",
    "vuepress": "1.9.10",
    "webpack": "5.99.9"
  },
  "workspace-sources": {
    "*": [
      "packages/*/src"
    ]
  },
  "dependencies": {
    "@yarnpkg/types": "^4.0.1",
    "chalk": "^2.4.2",
    "commander": "^2.20.3",
    "markdown-it-container": "4.0.0",
    "vuepress-plugin-sitemap": "2.3.1"
  },
  "resolutions": {
    "@types/markdown-it": "^14.1.2"
  },
  "packageManager": "yarn@4.9.4"
}
